@model IEnumerable<StoreManagement.Web.Models.Store.StoreVM>
@{
    ViewData["Title"] = "Stores";
}
<h1 class="h1">Stores</h1>
@if (Model != null)
{
    <table class="table table-sm table-responsive-sm table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StoreHours)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreHours)
                    </td>
                    <td>
                        @Html.ActionLink("products", "ProductsOfStoreAsync", "Management", 
                            new { ids = item.ProductsIds, storeId = item.StoreId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <p class="bg-danger">No data</p>
}